{
  "name": "desafio-xp-backend",
  "version": "1.0.0",
  "main": "server.ts",
  "repository": "https://github.com/Fabio-Vicente/desafio-xp",
  "author": "FÃ¡bio Vicente",
  "license": "MIT",
  "private": true,
  "scripts": {
    "create:db": "npx sequelize-cli db:create",
    "drop:db": "npx sequelize-cli db:drop",
    "dev": "nodemon --watch \"./src/**\" -ext \"ts, js\" --exec \"ts-node ./src/server.ts\"",
    "lint": "npx eslint './src/**/*'",
    "migrate:db": "npx sequelize-cli db:migrate",
    "prestart": "yarn tsc",
    "refresh:db": "yarn run migrate:db && yarn run seed:db",
    "seed:db": "npx sequelize-cli db:seed:all",
    "start": "node dist/server.ts",
    "test": "mocha --require ts-node/register ./tests/**/*$NAME*.spec.ts --exit",
    "reset": "yarn run drop:db && yarn run create:db && yarn run migrate:db && yarn run seed:db"
  },
  "devDependencies": {
    "@eslint/create-config": "^0.3.0",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.6",
    "@types/restify-errors": "^4.3.4",
    "@types/sequelize": "^4.28.14",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "sequelize-cli": "^6.4.1",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "restify-errors": "^8.0.2",
    "sequelize": "^6.21.3",
    "sequelize-test-helpers": "^1.4.2"
  }
}
